;
let qty=document.querySelector('input[name=quantity]')?.value;

    // CleverTap event tracking
    if (typeof clevertap !== 'undefined') {
        clevertap.event.push("Buy Now Clicked", {
            "Product ID": variantID || ShopifyAnalytics.meta.product.variants[0].id,
            "Product Title": "{{ product.title | escape }}"
        });
    }

    if (variantID) {
        console.log('Variant ID:', variantID);
        onBuyNowClick(e, false, [{'id': variantID, 'quantity': qty}]);
    } else {
        onBuyNowClick(e, false, [{'id': ShopifyAnalytics.meta.product.variants[0].id, 'quantity': qty}]);
    }
}

 
</script>





