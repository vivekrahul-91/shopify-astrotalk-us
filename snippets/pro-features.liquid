{% if features.value.size > 0 %}
  <div class="product-specifications page-width">
    <h2>{{ section.settings.heading }}</h2>
    <ul class="specification-list">
      {% for feature in features.value %}
        <li>
          <span class="check-mark">âœ“</span> {{ feature }}
        </li>
      {% endfor %}
    </ul>
  </div>
{% endif %}

