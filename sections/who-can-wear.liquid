  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Who Can Wear Pukhraj?"
    }
  ],
  "presets": [
    {
      "name": "Wear Section"
    }
  ]
}
{% endschema %}