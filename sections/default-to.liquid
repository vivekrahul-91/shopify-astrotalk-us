<!-- track-your-order.liquid -->

<div class="track-order-container">
  <h2>Track Your Order</h2>
  <form id="trackOrderForm">
    <div class="form-group">
      <label for="awbNumber">AWB Number / Order Number:</label>
      <input type="text" id="awbNumber" name="awbNumber" placeholder="Enter Order Number or AWB" required>
    </div>
    <div class="form-group">
      <label for="mobileNumber">Mobile Number:</label>
      <input type="text" id="mobileNumber" name="mobileNumber" placeholder="Enter Mobile Number" required>
    </div>
    <button type="button" id="trackButton">Track</button>
  </form>
  <div id="orderDetails"></div> 

</div> 
<style>
  .track-order-container {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-top: 50px;
  }
  .form-group {
    margin-bottom: 20px;
  }
  input[type="text"] {
    width: 100%;
    padding: 10px;
    margin: 5px 0;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  button {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    width: 100%;
  }
  button:hover {
    background-color: #0056b3;
  }



  #orderDetails {
  background: #fff;
  border-radius: 16px;
  padding: 20px;
  margin-top: 30px;
  font-family: 'Helvetica Neue', sans-serif;
  box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.08);
}

#orderDetails h3 {
  margin-bottom: 8px;
  font-size: 18px;
  font-weight: 600;
}

#orderDetails p {
  margin: 4px 0;
  color: #333;
  font-size: 14px;
}

#orderDetails hr {
  border: none;
  border-top: 1px solid #e0e0e0;
  margin: 16px 0;
}

.awb-section {
  background: #f6f6f6;
  border-radius: 12px;
  padding: 12px 16px;
  margin-top: 16px;
}

.awb-status {
  font-size: 14px;
  font-weight: 500;
  color: #7e7e7e;
}

.awb-number {
  font-size: 14px;
  font-weight: 600;
  color: #333;
}

.product-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 0;
  border-bottom: 1px solid #eee;
}

.product-item:last-child {
  border-bottom: none;
}

.product-item-name {
  font-weight: 500;
  font-size: 15px;
}

.product-item-qty {
  font-size: 13px;
  color: #555;
}

.product-item-price {
  font-weight: 600;
  font-size: 14px;
  color: #000;
}

/* Shipment Progress Stepper */
.stepper {
  margin-top: 24px;
}

.step {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.step-circle {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: #d3d3d3;
  margin-right: 12px;
}

.step-label {
  font-size: 14px;
  color: #999;
}

.step.active .step-circle {
  background-color: #000;
}

.step.active .step-label {
  font-weight: 600;
  color: #000;
}

.step.completed .step-circle {
  background-color: #4CAF50;
}

.step.completed .step-label {
  color: #4CAF50;
}

</style>


<script>
document.getElementById('trackButton').addEventListener('click', async function() {
  const orderNumber = document.getElementById('awbNumber').value;
  const mobileNumber = document.getElementById('mobileNumber').value;

  if (!orderNumber || !mobileNumber) {
    alert("Please enter both AWB/Order Number and Mobile Number.");
    return;
  }

  const apiUrl = `https://api.astromall.astrotalk.com/AstroMall/shipment/track-order-data?entityId=%23${orderNumber}&mobile=${mobileNumber}`;

  try {
    const response = await fetch(apiUrl);
    const data = await response.json();

    if (data.status === "OK") {
      const trackOrderPage = data.trackOrderPage;
      const customer = trackOrderPage.customerDetails;
      const productList = trackOrderPage.productDetailList;

      // Group items by AWB Number
      const groupedItems = productList.reduce((acc, item) => {
        if (!acc[item.awbNumber]) {
          acc[item.awbNumber] = {
            status: item.shipmentStatus,
            items: []
          };
        }
        acc[item.awbNumber].items.push(item);
        return acc;
      }, {});

      let output = `
        <h3>Customer: ${customer.name}</h3>
        <p><strong>Mobile:</strong> ${customer.mobile}</p>
        <p><strong>Address:</strong> ${customer.address}</p>
        <p><strong>Order Date:</strong> ${trackOrderPage.orderCreatedDate}</p>
        <hr>
      `;

      Object.keys(groupedItems).forEach(awbNumber => {
        const group = groupedItems[awbNumber];
        output += `
          <h4>AWB Number: ${awbNumber}</h4>
          <p>Status: ${group.status}</p>
          <div>
        `;

        group.items.forEach(item => {
          output += `
            <div>
              <p><strong>Product Name:</strong> ${item.productName}</p>
              <p><strong>Price:</strong> ₹${item.price}</p>
              <p><a href="${item.trackingUrl}" target="_blank">Track Shipment</a></p>
            </div>
          `;
        });

        output += `</div>`;
      });

      output += `<p><strong>Total: ₹${trackOrderPage.subTotal}</strong></p>`;
      document.getElementById('orderDetails').innerHTML = output;

    } else {
      alert("Order details not found. Please check your information.");
    }
  } catch (error) {
    alert("An error occurred while tracking your order.");
    console.error(error);
  }
});
</script>

