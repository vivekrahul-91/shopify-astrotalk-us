{% schema %}
{
  "name": "Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Make Birthdays More Colourful"
    },
    {
      "type": "metaobject",
      "id": "slider_metaobject",
      "label": "Select Product Slider Metaobject",
      "metaobject_type": "product_slider"
    }
  ],
  "presets": [
    {
      "name": "Slider"
    }
  ]
}
{% endschema %}
<div class="product-slider-wrapper page-width">
  <h2 class="slider-heading">{{ section.settings.heading }}</h2>
  <div class="slider-pop">
    <div class="swiper-button-prev"></div>
  <div class="swiper myProductSlider">
    <div class="swiper-wrapper">
      {% assign entries = shop.metaobjects.product_slider.values %}
      {% for entry in entries %}
        <div class="swiper-slide">
          <a href="{{ entry.link }}" class="slider-card">
            <div class="slider-image-wrapper">
              <img src="{{ entry.image | image_url: width: 300 }}" alt="{{ entry.title }}">
            </div>
            <p class="slider-title">{{ entry.title }}</p>
          </a>
        </div>
      {% endfor %}
    </div>

    <!-- Navigation -->
  </div>
  <div class="swiper-button-next"></div>
</div>
</div>

<style>
.product-slider-wrapper {
  text-align: center;
  margin: 40px auto;
  position: relative;
}

.slider-heading {
  font-size: 1.8rem;
  font-weight: 600;
  margin-bottom: 30px;
}

.slider-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-decoration: none;
  background: #fff;
  border-radius: 12px;
  padding: 16px;
  transition: all 0.3s ease;
}


.slider-image-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 50%;
  background: #f8f8f8;
  margin-bottom: 12px;
}

.slider-image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.slider-title {
  font-size: 1rem;
  font-weight: 500;
  color: #333;
}

/* Swiper arrows */
.swiper-button-next,
.swiper-button-prev {
  color: #000; /* arrow color */
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #fff;
}

.slider-pop {
    display: flex;
    align-items: center;
}

.swiper-button-next , .swiper-button-prev {
    position: relative;
    width: 20px;
    padding: 21px;
}

.swiper-button-next::after, .swiper-button-prev::after {
    font-size: 16px !important;
    color: #000;
}

.product-slider-wrapper .swiper-button-prev {
    left: -10px;
}

.product-slider-wrapper .swiper-button-next {
    right: -10px ;
}
.myProductSlider{
margin:0 25px !important;
width: 100%;
}
@media screen and (max-width: 749px){
.product-slider-wrapper .swiper-button-prev {
    left: 4px;
}
.slider-heading {
  margin-bottom: 15px;
}

.product-slider-wrapper .swiper-button-next {
    right: 4px ;
}
.product-slider-wrapper .swiper-button-next, .product-slider-wrapper .swiper-button-prev {
        position: absolute;
        top: 50%;
        z-index: 1;
        /* display: block; */
        cursor: pointer;
        border-width: 1px;
        border-style: solid;
        border-color: rgb(231, 231, 233);
        border-image: initial;
        outline: none;
        border-radius: 0;
        padding: 0;
        height: 34px;
    }
    .myProductSlider {
    margin: 0 20px !important;
}
.slider-card {
  padding: 4px;
}
}
</style>


<script>
  document.addEventListener("DOMContentLoaded", function() {
    new Swiper(".myProductSlider", {
      slidesPerView: 4,
      spaceBetween: 10,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev"
      },
      breakpoints: {
        768: { slidesPerView: 6 },
        480: { slidesPerView: 3 },
        0: { slidesPerView: 3 }
      }
    });
  });
</script>
