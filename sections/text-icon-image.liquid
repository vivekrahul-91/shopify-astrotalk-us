{% comment %}
  Why Choose Us Section
  
  A customizable section displaying features/benefits with icons and text.
  Each feature is added as a block with an uploaded image and customizable text.
{% endcomment %}

<!-- {{ 'section-why-choose-us.css' | asset_url | stylesheet_tag }} -->

<div class="why-choose-section {{ section.settings.class}}" id="why-choose-{{ section.id }}">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
         <div class="image-div">
           {% for i in (1..section.settings.image_count) %}
            {% assign image_setting = 'image_' | append: i %}
            {% assign image_value = section.settings[image_setting] %}
            {% if image_value != blank %}
              <div class="img-divs">
               <img src="{{ image_value | img_url: 'large' }}"
                   alt="{{ section.settings.image_count | escape }}"
                    loading="lazy">
                
              </div>
            {% endif %}
          {% endfor %}
      </div>
      
      </div>
    {% endif %}
    
    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="feature-icon">
              <img src="{{ block.settings.icon | img_url: 'large' }}" 
                alt="{{ block.settings.heading | escape }}"
                width="60"
                height="60"
                loading="lazy">
            </div>
          {% endif %}
          
          <div class="feature-content">
            {% if block.settings.heading != blank %}
              <h3 class="feature-heading">{{ block.settings.heading }}</h3>
            {% endif %}
            
            {% if block.settings.text != blank %}
              <p class="feature-text">{{ block.settings.text }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

