<!-- sections/gemstone-care.liquid -->
<div class="gemstone-care-section">
  <div class="container">
    <h2>{{ section.settings.section_title | default: 'Gemstone Care Instruction' }}</h2>
    <div class="gemstone-care-wrapper">

      <!-- Product Image -->
      <div class="gemstone-image-container">
        {% if section.settings.gemstone_image != blank %}
          <img 
            src="https://cdn.shopify.com/s/files/1/0878/4907/4985/files/Gemstone-Care-Instruction-Web_2b9db990-eb1d-4a9b-8b6b-00128d171160.png?v=1758008799" 
            alt="{{ section.settings.gemstone_image.alt | default: 'Gemstone' }}"
            class="gemstone-image gem-img-desk"
            loading="lazy"
          >
          <img 
            src="https://cdn.shopify.com/s/files/1/0878/4907/4985/files/Gemstone-Care-Instruction-Mobile-img.png?v=1758009750" 
            alt="{{ section.settings.gemstone_image2.alt | default: 'Gemstone' }}"
            class="gemstone-image gem-img-mob"
            loading="lazy"
          >
        {% endif %}
      </div>

      <!-- Care Instructions Content -->
      <div class="care-instructions-content">
        <h2 class="section-title">{{ section.settings.section_title | default: 'Gemstone Care Instruction' }}</h2>
        
        <div class="care-grid">
          
          {% if product.id == 9592127717673 or product.id == 9816483103017 or product.id == 9592431935785 or product.id == 9816700256553 %}
            <!-- Content for product IDs 12, 23, 34, 43 -->
            <div class="care-item">
              <h3 class="care-title">Cleaning</h3>
              <p class="care-description">
                Apply coconut or baby oil regularly to maintain shine and strength. 
                You can also gently clean with a soft cloth.
              </p>
            </div>
            <div class="care-item">
              <h3 class="care-title">Avoid</h3>
              <p class="care-description">
                Keep away from harsh chemicals, perfumes, ultrasonic or steam cleaners, and extreme heat.
              </p>
            </div>
            <div class="care-item">
              <h3 class="care-title">While Wearing</h3>
              <p class="care-description">
                Avoid wearing during heavy work, gym, or while using harsh detergents.
              </p>
            </div>
            <div class="care-item">
              <h3 class="care-title">Storage</h3>
              <p class="care-description">
                If not wearing, always store the gemstone dipped in coconut or baby oil inside a soft container.
              </p>
            </div>
            <div class="care-item">
              <h3 class="care-title">Re-energized</h3>
              <p class="care-description">
                Get it re-energized periodically for continued astrological benefits.
              </p>
            </div>
          <style>
            .care-item:nth-child(3), .care-item:nth-child(4){
                    border-bottom: 1px solid #EDE1D2;
                    padding: 20px 0;
                }
          </style>
          {% else %}
            <!-- Default Content for all other products -->
            <div class="care-item">
              <h3 class="care-title">Cleaning</h3>
              <p class="care-description">
                Use lukewarm water, mild soap, and a soft brush to clean gently.
              </p>
            </div>
            <div class="care-item">
              <h3 class="care-title">Avoid</h3>
              <p class="care-description">
                Keep away from harsh chemicals, ultrasonic or steam cleaners.
              </p>
            </div>
            <div class="care-item">
              <h3 class="care-title">While Wearing</h3>
              <p class="care-description">
                Avoid wearing during heavy work, gym, or while using harsh detergents.
              </p>
            </div>
            <div class="care-item">
              <h3 class="care-title">Re-energised</h3>
              <p class="care-description">
                Get it re-energized periodically for continued astrological benefits.
              </p>
            </div>
          {% endif %}

        </div>
      </div>
    </div>
  </div>
</div>

<style>
.gemstone-care-section {
  padding: 60px 0;
  {% comment %} background-color: #f8f8f8; {% endcomment %}
}

.gemstone-care-section .container {
  max-width: 1200px;
  margin: 0 auto;
  {% comment %} padding: 0 20px; {% endcomment %}
}

.gemstone-care-wrapper {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 60px;
    align-items: center;
    background: #FFF5E8;
    border-radius: 12px;
}
.care-instructions-content {
    max-width: 100%;
    padding: 25px 40px 20px 0px;
}
.gemstone-image-container {
