    line-height: 24px;
    margin-bottom: 24px;
}
  .section-title {
    font-size: 1.8rem;
    text-align: center;
    margin-bottom: 25px;
  }
  
  .care-grid {
    grid-template-columns: 1fr ;
  }
  
  .care-item {
    padding: 20px;
  }
  
  .care-title {
    font-size: 1rem;
  }
  
  .care-description {
    font-size: 0.9rem;
  }
  
.care-item:not(:last-child) {
    border-bottom: 1px solid #EDE1D2;
}
    .care-item {
        padding: 10px 0px;
            margin: 0 12px 2px 0;
    }
}

@media (max-width: 768px){
.gemstone-image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 0;
}
.gemstone-image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 0;
}
.gemstone-care-wrapper{
padding: 0;
}
}

@media (max-width: 480px) {
    .gemstone-care-wrapper {
        padding: 20px 5px 0px 0px;
    }
  .gemstone-image-container, .gem-img-mob {
    height: 100%;
}
.care-item p.care-description {
    font-size: 12px !important;
    line-height: 16px;
}
  .section-title {
    font-size: 1.5rem;
  }

  .care-title {
    font-size: 14px !important;
    margin-bottom: 3px;
  }
  
  .care-description {
    font-size: 0.85rem;
  }
  care-description {
    margin-top: 0px;
  }
  
}
@media (max-width: 768px){
  .care-instructions-content{
    padding: 0;
}
.care-item:nth-child(1), .care-item:nth-child(2) {
    padding: 10px 0;
}
}
</style>

