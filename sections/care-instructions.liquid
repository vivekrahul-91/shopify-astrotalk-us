    font-weight: 600;
    line-height: 24px;
}
.care-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
}

.care-item:nth-child(1), .care-item:nth-child(2) {
    border-bottom: 1px solid #EDE1D2;
    padding: 20px 0;
}

.care-item {
    padding: 10px 0;
    margin: 10px 10px;
}

.care-title {
    font-family: 'Figtree';
    color: #000;
    font-family: "Inter", sans-serif;
    font-size: 24px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
}


.care-description {
