  <style>

    .rakhi-countdown-wrapper {
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        max-width: 1200px;
        margin: auto;
    }

    .rakhi-text {
        font-size: 24px;
        font-family: var(--font-heading-family);
        font-weight: 600;
        color: #000;
        padding: 0;
        text-align: left;
        flex: 1 1 100%;
    }

    .flipdown-wrapper {
      flex: 1 1 100%;
      padding: 10px 20px;
      display: flex;
      justify-content: center;
    }

    .flipdown {
      transform: scale(0.8);
    }
.flipdown {
    overflow: visible;
    width: auto;
    height: auto;
}
    @media(min-width: 768px) {
      .rakhi-countdown-wrapper {
        flex-wrap: nowrap;
      }

      .rakhi-text {
        flex: 0 0 40%;
        font-size: 24px;
        text-align: left;
      }

      .flipdown-wrapper {
        flex: 0 0 60%;
        justify-content: flex-end;
      }

      .flipdown {
        transform: scale(1);
      }
    }

    /* Optional: Tighten the FlipDown spacing */
    .flipdown .rotor-group {
      margin-right: 5px;
    }

    .flipdown .rotor-group:last-child {
      margin-right: 0;
    }


.rotor-group-heading {
    font-size: 16px;
    text-transform: uppercase;
}
    .flipdown .rotor-group-heading:before {
    display: block;
    height: 28px;
    line-height: 30px;
    text-align: center;
}
    .flipdown .rotor {
    position: relative;
    float: left;
    width: 35px;
    height: 56px;
    margin: 0px 6px 0px 0px;
    border-radius: 4px;
    font-size: 2.8rem;
    text-align: center;
    perspective: 200px;
}
    .flipdown .rotor-leaf {
    z-index: 1;
    position: absolute;
    width: 35px;
    height: 56px;
    transform-style: preserve-3d;
    transition: transform 0s;
}
    .flipdown .rotor-top {
    line-height: 56px;
    border-radius: 4px 4px 0px 0px;
}

.flipdown .rotor-top, .flipdown .rotor-bottom {
    overflow: hidden;
    position: absolute;
    width: 35px;
    height: 28px;
}
    .flipdown .rotor-bottom {
    bottom: 0;
    line-height: 0px;
    border-radius: 0px 0px 4px 4px;
}

    .flipdown .rotor-leaf-front {
    line-height: 56px;
    border-radius: 4px 4px 0px 0px;
}
    .flipdown .rotor:after {
    content: '';
    z-index: 2;
    position: absolute;
    bottom: 0px;
    left: 0px;
    width: 35px;
    height: 28px;
    border-radius: 0px 0px 4px 4px;
}
    .flipdown .rotor-leaf-front, .flipdown .rotor-leaf-rear {
    overflow: hidden;
    position: absolute;
    width: 35px;
    height: 28px;
    margin: 0;
    /* transform: rotateX(0deg); */
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
}
    .flipdown .rotor-group:nth-child(n+2):nth-child(-n+3):before {
    content: '';
    position: absolute;
    bottom: 16px;
    left: 84px;
    width: 8px;
    height: 8px;
    border-radius: 50%;
}
    .flipdown .rotor-group:nth-child(n+2):nth-child(-n+3):after {
    content: '';
    position: absolute;
    bottom: 32px;
    left: 84px;
    width: 8px;
    height: 8px;
    border-radius: 50%;
}
.flipdown .rotor-group {
    position: relative;
    float: left;
    padding-right: 20px;
}
    .rakhi-wrap-div{
      background: linear-gradient(188deg, #FFDF8B 1.69%, #FFD76E 35.75%, #FFD464 76.82%);
    }
.rotor-group:first-child::before, .rotor-group:first-child::after {
    content: '';
    font-size: 10px;
    position: absolute;
    padding: 2px;
