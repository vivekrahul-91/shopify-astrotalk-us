{% doc %}
  @prompt
    Create a customizable thumbnail links section with multiple thumbnails that act as links. Include settings to control the number of thumbnails per row on desktop and mobile, and an option to adjust the border radius of the thumbnails., i want to select the number of columns to be displayed, also there should be a section heading and subehading, the no of cards per row in mobile can be upto 4


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .thumbnail-section-{{ ai_gen_id }} {
    margin-bottom: 30px;
  }

  .thumbnail-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 25px;
  }

  .thumbnail-heading-{{ ai_gen_id }} {
    margin: 0 0 10px;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
  }

  .thumbnail-subheading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.subheading_size }}px;
    font-weight:400;
    color: {{ block.settings.subheading_color }};
  }

  .thumbnail-links-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap }}px;
    margin-bottom: 20px;
  }

  .thumbnail-link-{{ ai_gen_id }} {
    display: block;
    position: relative;
    text-decoration: none;
    color: inherit;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;transition: transform 0.3s ease;
  }

  .thumbnail-link-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .thumbnail-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_ratio }}%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .thumbnail-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .thumbnail-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .thumbnail-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
  }

  .thumbnail-title-{{ ai_gen_id }} {
    margin-top: 10px;
    text-align: {{ block.settings.text_alignment }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
  }

  .thumbnail-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    transition: opacity 0.3s ease;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .thumbnail-link-{{ ai_gen_id }}:hover .thumbnail-overlay-{{ ai_gen_id }} {
    opacity: {{ block.settings.overlay_opacity_hover | divided_by: 100.0 }};
  }

  @media screen and (max-width: 749px) {
    .thumbnail-links-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.gap_mobile }}px;
    }

    .thumbnail-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
    
    .thumbnail-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
    
    .thumbnail-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="thumbnail-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank or block.settings.subheading != blank %}
    <div class="thumbnail-header-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="thumbnail-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.subheading != blank %}
        <div class="thumbnail-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}
    </div>
  {% endif %}

  <div class="thumbnail-links-{{ ai_gen_id }}">
    {% for i in (1..6) %}
      {% assign image_key = 'image_' | append: i %}
      {% assign title_key = 'title_' | append: i %}
      {% assign link_key = 'link_' | append: i %}
      
      {% if block.settings[image_key] != blank or block.settings[title_key] != blank %}
        <a href="{{ block.settings[link_key] | default: '#' }}" class="thumbnail-link-{{ ai_gen_id }}">
          <div class="thumbnail-image-wrapper-{{ ai_gen_id }}">
            {% if block.settings[image_key] != blank %}
              <img
                src="{{ block.settings[image_key] | image_url: width: 500 }}"
                alt="{{ block.settings[title_key] | escape }}"
                loading="lazy"
                class="thumbnail-image-{{ ai_gen_id }}"width="{{ block.settings[image_key].width }}"
                height="{{ block.settings[image_key].height }}"
              >
            {% else %}
              <div class="thumbnail-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}<div class="thumbnail-overlay-{{ ai_gen_id }}"></div>
          </div>
          {% if block.settings[title_key] != blank %}
            <div class="thumbnail-title-{{ ai_gen_id }}">{{ block.settings[title_key] }}</div>
          {% endif %}
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>

